<% layout('/layouts/Boilerplate') %> 
<link rel="stylesheet" href="/stylesheets/star.css">
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campground = <%-JSON.stringify(campgrounds) %>;
</script>
    <div class="d-flex flex-column">
    <div class="card offset-3  " style="width: 30rem;">
        
        <img src="<%= campgrounds.image %>" class="card-img-top" alt="..." height="250rem">
        <div class="card-body">
            <h5 class="card-title"><%= campgrounds.title %> </h5>
          <p class="card-text"> <%= campgrounds.location %></p>
          <p class="card-text"> <%= campgrounds.description %></p>
          <p class="card-text"> <%= campgrounds.price %></p>
          <p class="card-text"> <%= campgrounds.author[0].username %></p>
        
        </div>
        <% if(currentUser._id.equals(campgrounds.author[0]._id)) { %>
            <div class="card-body" >
                <form class="d-inline" action="/campgrounds/<%=campgrounds._id%>?_method=Delete" method="POST">
                    <button class="btn btn-danger  ">
                        DELETE
                    </button>
        
                </form>
                <a class=" btn btn-info" href="/campgrounds/<%=campgrounds._id%>/edit">
                    Edit
                </a>
            </div> 
            <% } %> 
      
      

    <div class="card offset-0   " style="width: 30rem">
    <div id='map' style='width: 100%; height: 300px;'></div>
        <h2>Leave a Review</h2>
        <form action="/campgrounds/<%=campgrounds._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                 
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <h4>Reviews :</h4>
        <% for(let review of campgrounds.reviews) { %>
            <div class="card mb-3 ">
                
                <div class="card-body">
                                      
                     <p class="starability-result" data-rating="<%= review.rating %>">
                      Rated: 3 stars
                        </p>
                    <p class="card-text">Review: <%= review.body %></p>
                    <form action="/campgrounds/<%=campgrounds._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <% } %>
        </div>
 </div>
</div>
    </div>
    

  
    
<script src="/map.js"></script>
    
   
    
